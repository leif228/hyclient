<?xml version="1.0" encoding="utf-8"?>
<!-- 弹出菜单布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_baseic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="基本信息"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/menu_apply_agent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="申请成为代理人"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/menu_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="收款账户"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_userchild"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="子账号"
            android:textColor="#fff"
            android:textSize="18dp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/menu_agent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="代理关系"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_agent_apply"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="代理申请"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_update_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="修改登录密码"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/menu_bindcard_paypwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#3B79C4"
            android:padding="10dp"
            android:text="绑卡及支付密码"
            android:textColor="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" />
    </LinearLayout>

</LinearLayout>