<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#4779d8"
    android:focusable="true" >

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="首页"
        android:textColor="#fff"
        android:textSize="22dp"
        android:visibility="gone" />
    

  <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="#ededed"
        android:orientation="horizontal"
        android:clickable="true" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#4779d8" >

            <ImageView
                android:id="@+id/search_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/iv_delete_bg"
                android:visibility="gone" />

            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="8dp"
                android:background="@drawable/search_edittext_shape"
                android:drawableLeft="@drawable/search_icon"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="请输入船舶名称"
                android:imeOptions="actionSearch"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

        </FrameLayout>
    </LinearLayout> 

    <Button
        android:id="@+id/top_left_but"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:background="@drawable/base_back"
        android:textSize="18dp"
        android:visibility="gone" />
    <!-- android:background="@drawable/top_left" -->

    <Button
        android:id="@+id/top_right_but"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/search_24"
        android:textSize="18dp"
        android:visibility="gone" />

</RelativeLayout>