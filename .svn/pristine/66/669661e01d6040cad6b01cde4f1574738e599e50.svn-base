<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bgColor"
        android:orientation="vertical" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"  android:gravity="center_vertical"
    android:background="#4D7DD2" >

    <Button
        android:id="@+id/top_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
       
        android:layout_margin="10dp"
        android:background="#4D7DD2"  
        android:drawableLeft="@drawable/base_back"
       android:textSize="18dp"
       
        android:textColor="#fff" />
    <TextView
        android:id="@+id/top_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="1"
        android:text="注册"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="22dp" />


    <Button
         
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
          android:textColor="#fff"
           android:id="@+id/top_commit" android:textSize="18dp"
        android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:minWidth="24dp"
        android:background="@null"
        />

</LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/base_edittext"
            android:hint="*设置密码"
            android:id="@+id/pwd1"
            android:padding="3dp"
            android:password="true"
            android:textSize="18dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/base_edittext"
            android:hint="*再次输入密码"
            android:id="@+id/pwd2"
            android:password="true"
            android:padding="3dp"
             android:textSize="18dp"
           />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/base_edittext"
            android:hint="*密码提示问题"
            android:padding="3dp" android:visibility="gone"
            android:id="@+id/question" 
             android:textSize="18dp"
             />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/base_edittext"
            android:hint="*密码提示答案"
            android:padding="3dp"
            android:id="@+id/answer"   android:visibility="gone"
            android:textSize="18dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#4D7DD2"
            android:padding="10dp"
            android:text="确定"
            android:id="@+id/submit"
            android:textColor="#fff"
            android:textSize="18dp" />

         
    </LinearLayout>

</RelativeLayout>