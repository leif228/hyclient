<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bgColor"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp" >

                <ImageView
                    android:id="@+id/user_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/login_login" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone" >

                <TextView
                    style="@style/information_text"
                    android:layout_centerVertical="true"
                    android:text="用户名" />

                <ImageView style="@style/info_img" />
            </RelativeLayout>
        </LinearLayout>

        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#c8c8c8" />
           <RelativeLayout
                android:id="@+id/updatepwd"
                android:layout_width="fill_parent"
                android:layout_height="50dp" 
                android:background="#fff">

                <TextView
                    style="@style/information_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="姓名"
                    android:textColor="#464646"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/userRealName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    android:text="无"
                    android:textColor="#c8c8c8"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#c8c8c8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

           <RelativeLayout
                android:id="@+id/userLoginNameFlag"
                android:layout_width="fill_parent"
                android:layout_height="50dp" 
                android:background="#fff">

                <TextView
                    style="@style/information_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="登录名"
                    android:textColor="#464646"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/userLoginName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    android:text="qqqqqq"
                    android:textColor="#c8c8c8"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#c8c8c8" />

            
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff" >

                <TextView
                    style="@style/information_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="昵称"
                    android:textColor="#464646"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    android:text="测试用户"
                    android:textColor="#c8c8c8"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#c8c8c8" />
            
			<RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff" >

                <TextView
                    style="@style/information_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="手机号"
                    android:textColor="#464646"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/phoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    android:text="1353527****"
                    android:textColor="#c8c8c8"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#c8c8c8" />
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#fff" >

                <TextView
                    style="@style/information_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="邮箱"
                    android:textColor="#464646"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    android:text="qqqqqq@eyunda.com"
                    android:textColor="#c8c8c8"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#c8c8c8" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp" 
        android:id="@+id/btnSaveTag">

        <Button
            android:id="@+id/button_save"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E44647"
            android:text="保存结果"
            android:textColor="#fff"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>