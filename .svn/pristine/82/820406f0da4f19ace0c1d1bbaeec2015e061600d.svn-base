<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cargo_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor" >

    <include
        android:id="@+id/include"
        layout="@layout/normal_top" />

   <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include" > 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_below="@+id/include">

            <RelativeLayout
                android:id="@+id/basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/to_name"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:ems="100"
                    android:text=""
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/to_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:visibility="gone" >

                    <!-- <requestFocus /> -->
                </EditText>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/title"
                    android:layout_alignBottom="@+id/title"
                    android:layout_alignParentLeft="true"
                    android:text="通知标题："
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView3"
                    android:ems="100"
                    android:text="" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/content"
                    android:layout_alignBottom="@+id/content"
                    android:layout_alignRight="@+id/textView1"
                    android:text="发送内容：" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/content"
                    android:text="匹配条件：" />

                <EditText
                    android:id="@+id/et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:enabled="false"
                    android:text="船舶接货类别包括货物类别，船舶经营区域包括货物起运港及到达港。" />
            </RelativeLayout>
            
             <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#c8c8c8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basic"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_checknum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选中0项"
                    android:visibility="gone"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/btnAll"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/eyd_btn_style_positive"
                    android:text="全选"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/eyd_btn_style_calm"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#c8c8c8" />

            <com.eyunda.third.activities.ship.widget.MyListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basic2" >
            </com.eyunda.third.activities.ship.widget.MyListView> 
            <!-- <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basic2" >
            </ListView> -->
        </LinearLayout>
    </ScrollView> 

</RelativeLayout>