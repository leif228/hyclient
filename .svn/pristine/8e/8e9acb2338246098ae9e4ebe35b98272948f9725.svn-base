<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" >

    <include
        android:id="@+id/head"
        layout="@layout/normal_top" />

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:background="@color/bgColor"
        android:orientation="vertical" >
       <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:id="@+id/bar_but1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="全部"
            android:textColor="@color/blue"
            android:textSize="18dp" />
 
 

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="#DFDFDF" />

        <Button
            android:id="@+id/bar_but4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="搜索 "
            android:textColor="#464646"
            android:textSize="18dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#DFDFDF" />

</LinearLayout>

       

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#DFDFDF" />

        <LinearLayout
            android:id="@+id/search_text_lay"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:gravity="center"
            android:visibility="gone" >

            <TextView
                android:id="@+id/search_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#86ABEF"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>
<RelativeLayout  android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tool_bar">
    <com.ygl.android.view.YFListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F7F7F7"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:divider="#ffaeb1b4"
        android:dividerHeight="1px"
        android:fastScrollEnabled="true"
        android:padding="5dip"
        android:paddingLeft="1dip"
        android:paddingRight="1dip" />
     <ScrollView  
    android:id="@+id/head1"       android:background="@color/bgColor"
    android:layout_width="fill_parent"   android:visibility="gone"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
      
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:visibility="gone"
            android:padding="5dp" >

            <TextView
                style="@style/info4_text"
                android:layout_weight="1"
                android:text="模糊查询" />

            <Button
                android:id="@+id/search_but1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info_item4_serch_search_bg" />
        </LinearLayout>

       

       
         

       

       
         
     
 
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                style="@style/info4_text"
                android:layout_weight="1"
                android:text="综合查询" />

            
        </LinearLayout>
 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <EditText
                android:id="@+id/school_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/info_item4_serch_text"
                android:hint="输入学校名称查询"
                android:textSize="18dp" />
        </LinearLayout>
       

        <TextView
            style="@style/info4_text"
            android:text="地区"
            android:visibility="gone" />

        <Button
            android:id="@+id/dq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/info_item4_serch_normal_but"
            android:hint="选择地区"
            android:padding="5dp"
            android:textSize="18dp" />

         
          

        <TextView
            style="@style/info4_text"
            android:layout_margin="10dp"
            android:text="学校类别" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  android:orientation="vertical">

            <Button
                android:id="@+id/tszs_b1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/info_item4_serch_normal_but"
                android:hint="学校类别"
                android:textSize="18dp" />

             

        </LinearLayout>
<Button
                android:id="@+id/search_but3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:textColor="#fff"
                  android:background="#3B79C4"
                  android:padding="10dp"
                  android:text="搜索"   android:textSize="18dp" 
                  
               />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@drawable/info_item4_serch_line" />
    </LinearLayout>

</ScrollView>
    
</RelativeLayout>
</RelativeLayout>