<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:paddingTop="15dp" >

        <!-- 文字 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical" >

            <!-- 文字行一 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/settleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="交易类型"
                    android:textColor="#464646"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/feeItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="费项" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >
              <TextView
                    android:id="@+id/gmtPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易时间"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >
              <TextView
                    android:id="@+id/settleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易号"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/inout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="收支"
                    android:textSize="12sp" />  

                <TextView
                    android:id="@+id/totalFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="金额"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/paymentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付状态"
                    android:textSize="12sp" />  

                <TextView
                    android:id="@+id/refundStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="退款状态"
                    android:textSize="12sp" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="交易描述"
                    android:textSize="12sp" />
            </LinearLayout>

            
            
            <!-- 操作列表 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:orientation="horizontal" >


                <Button
                    android:id="@+id/btnStartSurety"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/eyd_btn_style_positive"
                    android:text="¥支付"
                    android:textColor="#ffffff"
                    android:textSize="14sp" 
                    android:layout_marginRight="4dp"
                     />
                <Button
                    android:id="@+id/btnEndSurety"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/eyd_btn_style_positive"
                    android:text="确认付款"
                    android:textColor="#ffffff"
                    android:textSize="14sp" 
                    android:layout_marginRight="4dp"
                     />
                <Button
                    android:id="@+id/btnDirectRefund"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/eyd_btn_style_positive"
                    android:text="退款"
                    android:textColor="#ffffff"
                    android:textSize="14sp" 
                    android:layout_marginRight="4dp"
                    android:visibility="gone"
                     />
                <Button
                    android:id="@+id/btnApplyRefund"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/eyd_btn_style_positive"
                    android:text="申请退款"
                    android:textColor="#ffffff"
                    android:textSize="14sp" 
                    android:layout_marginRight="4dp"
                     />
                <Button
                    android:id="@+id/btnRefund"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:background="@drawable/eyd_btn_style_positive"
                    android:text="退款处理"
                    android:textColor="#ffffff"
                    android:textSize="14sp" 
                    android:layout_marginRight="4dp"
                     />
                 <Button
                    android:id="@+id/btnDel"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/eyd_btn_style_calm"
                    android:text="删除"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 文字结束 -->

</LinearLayout>