<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bgColor"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="绑定手机"
                android:textColor="#000"
                android:textSize="22dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="#00ffffff"
                android:drawableLeft="@drawable/base_back"
                android:text="  返回" android:id="@+id/top_back"
                android:textColor="@color/text_but"
                android:textSize="18dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#BDBEC2" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/base_edittext"
            android:hint="手机号"
            android:padding="3dp"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               
                android:background="@drawable/base_edittext"
                android:hint="验证码"
                android:padding="3dp"
                android:password="true"  android:layout_marginRight="20dp"
                android:textSize="18dp"  android:layout_weight="1"/>
            
            <Button    android:layout_width="fill_parent"    android:background="#ffF7F7F7"
            android:textColor="@color/text_but" android:textSize="10dp"  android:layout_weight="3"
              android:layout_margin="3dp"
                android:layout_height="fill_parent" android:text="获取验证码"  />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#4D7DD2"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>

    

</RelativeLayout>