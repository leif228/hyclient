    <include layout="@layout/home_item" />

    <include layout="@layout/home_item" />

    <include layout="@layout/home_item" />

    <include layout="@layout/home_item" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#c8c8c8" />

</LinearLayout>