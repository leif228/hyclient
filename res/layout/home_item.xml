<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:focusable="false" android:visibility="gone"
    android:focusableInTouchMode="false"    
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#c8c8c8" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="11px"
        android:paddingLeft="25dp"
        android:paddingRight="13dp"
        android:paddingTop="11px" >

        <ImageView
            android:id="@+id/college_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="#464646"
                  android:maxLines="2"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/home_jian"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/college_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="2"
                android:textColor="#8c8c8c"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/college_favor"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/home_collect" />
    </LinearLayout>

</LinearLayout>