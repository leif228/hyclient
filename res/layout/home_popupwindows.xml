<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#f0f0f0">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f0f0f0"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/cargoTypes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/tons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/upPort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/downPort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/bt_nobgd"
            android:layout_below="@+id/ll_popup"
            android:text="取消"
            android:textColor="#585858"
            android:textSize="18sp" />

        <Button
            android:id="@+id/item_popupwindows_confirm"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_popup"
            android:background="@drawable/bt_nobgd"
            android:text="确定"
            android:textColor="#585858"
            android:textSize="18sp" />

</RelativeLayout>