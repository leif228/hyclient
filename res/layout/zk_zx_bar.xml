<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:singleLine="true"
            android:background="@null"
            android:text="焦点新闻 "   android:layout_weight="1"
            android:id="@+id/bar_but1"
            android:textColor="#404040"
            android:textSize="18dp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="#DFDFDF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"  android:singleLine="true"
            android:text="信息快递 "  android:id="@+id/bar_but2"
            android:textColor="#B0B0B0"
            android:textSize="18dp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="#DFDFDF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null" android:singleLine="true"
            android:text="招录政策"  android:id="@+id/bar_but3"
            android:textColor="#B0B0B0"
            android:textSize="18dp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:background="#DFDFDF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_weight="1"
            android:background="@null"
            android:minEms="3"
            android:text="考务考籍 "  android:id="@+id/bar_but4"
            android:textColor="#B0B0B0"
            android:textSize="18dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#DFDFDF" />

</LinearLayout>